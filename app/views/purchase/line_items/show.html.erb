<div class="page-header">
  <h1>Закупки МГУП</h1>
  <h3>Наименование товара <%= @lineitem.purchase_goods.name %></h3>
</div>
<div class="row">
  <div class="col col-lg-10">
    <%= link_to 'Заявки', purchase_purchases_path, class: 'btn btn-primary' %>
    <%= link_to 'Поставщики', purchase_suppliers_path, class: 'btn btn-primary' %>
    <%= link_to 'Товары', purchase_goods_path, class: 'btn btn-primary' %>
    <%= link_to 'ДФП', purchase_line_items_path, class: 'btn btn-primary' %>
  </div>
</div>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Наименование</th>
      <th>Заявка</th>
      <th>Дата регистрации</th>
      <th>Стоимость</th>
      <th>Департамент</th>
      <th>Поставщик</th>
      <th>Опубликован</th>
      <th>Законтрактован</th>
      <th>Поставлен</th>
      <th>Оплачен</th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: 'form_s' %>
  </tbody>
</table>



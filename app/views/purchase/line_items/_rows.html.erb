<% @lineitems.each do |lineitem| %>
    <tr>
        <td><%= lineitem.purchase_goods.name %></td>
        <td><%= lineitem.purchase_purchases.number %></td>
        <td><%= l(lineitem.purchase_purchases.date_registration) %></td>
        <td><%= lineitem.purchase_purchases.department.name %></td>
        <td><%= sprintf('%8.2f', lineitem.total_price) %></td>
        <td><% if lineitem.purchase_suppliers == nil %>
                <%= 'не определен' %>
              <% else %>
                <%= lineitem.purchase_suppliers.name %> <br> <%= lineitem.purchase_suppliers.inn.to_s %> <br> <%= lineitem.purchase_suppliers.address %>
              <% end %>
        </td>
        <td>
        <%= link_to purchase_line_item_path(lineitem), class: 'btn btn-primary', title: 'Посмотреть' do %>
            <span class="glyphicon glyphicon-search"></span>
        <% end %>
        </td>
        <td>
            <%= link_to edit_purchase_line_item_path(lineitem), class: 'btn btn-warning', title: 'Изменить' do %>
                <span class="glyphicon glyphicon-edit"></span>
            <% end %>
        </td>
        <td>
            <%= link_to purchase_line_item_path(lineitem), class: 'btn btn-danger', title: 'Удалить',
                        method: :delete,
                        data: { confirm: 'Вы уверены? Запись будет удалена!' }  do %>
                <span class="glyphicon glyphicon-remove"></span>
            <% end %>
        </td>
    </tr>
<% end %>

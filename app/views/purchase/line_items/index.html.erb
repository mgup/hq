<div class="page-header">
  <h1>Закупки МГУП</h1>
  <h3>Список закупаемых товаров</h3>
</div>
<%= render 'purchase/header' %>
<div class="row">
    <%= form_tag search_result_purchase_line_items_path, method: 'get' do %>
        <div class="col col-sm-4">
          <%= text_field_tag :search_keyword, nil, placeholder: 'Введите запрос', class: 'form-control' %>
        </div>
        <div class="col col-sm-2">
          <%= submit_tag 'Поиск' , class: 'btn btn-primary'%>
        </div>
    <% end %>
</div>
<table class="table table-condensed">
  <thead>
  <tr>
    <th>Товар</th>
    <th>Заявка</th>
    <th>Дата регистрации</th>
    <th>Департамент</th>
    <th>Стоимость</th>
    <th>Поставщик</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
      <%= render partial: 'rows' %>
  </tbody>
</table>

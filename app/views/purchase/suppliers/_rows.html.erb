<% @suppliers.each do |supplier| %>
    <tr>
        <td><%= supplier.id %></td>
        <td><%= supplier.name %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.inn %></td>
        <td><%= supplier.phone %></td>
        <td>
            <%= link_to edit_purchase_supplier_path(supplier), class: 'btn btn-warning', title: 'Изменить' do %>
                <span class="glyphicon glyphicon-edit"></span>
            <% end %>
        </td>
        <td>
            <%= link_to purchase_supplier_path(supplier), class: 'btn btn-danger', title: 'Удалить',
                        method: :delete,
                        data: { confirm: 'Вы уверены? Запись будет удалена!' }  do %>
                <span class="glyphicon glyphicon-remove"></span>
            <% end %>
        </td>
    </tr>
<% end %>

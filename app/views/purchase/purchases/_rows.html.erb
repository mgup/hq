<% @purchases.off_budget.each do |purchase| %>
    <tr>
        <td><%= purchase.id %></td>
        <td><%= purchase.date_registration.nil? ? '' : l(purchase.date_registration) %></td>
        <td><%= purchase.department.nil? ? '-' : purchase.department.department_name %></td>
        <td><%= purchase.status %></td>
        <td>
          <%= purchase.purchase_line_items.collect { |li| li.planned_sum.to_i }.sum %>
        </td>
        <td>
          <%= link_to purchase_purchase_path(purchase, format: 'xlsx'), class: 'btn btn-primary', title: 'Посмотреть' do %>
              <span class="glyphicon glyphicon-search"></span>
          <% end %>
        </td>
        <td>
            <%= link_to edit_purchase_purchase_path(purchase), class: 'btn btn-warning', title: 'Изменить' do %>
                <span class="glyphicon glyphicon-edit"></span>
            <% end %>
        </td>
        <td>
            <%= link_to purchase_purchase_path(purchase), class: 'btn btn-danger', title: 'Удалить',
                        method: :delete,
                        data: { confirm: 'Вы уверены? Запись будет удалена!' }  do %>
                <span class="glyphicon glyphicon-remove"></span>
            <% end %>
        </td>
    </tr>
<% end %>


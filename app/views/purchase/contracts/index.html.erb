<%= render 'purchase/header' %>

<div class="row">
  <div class="col col-lg-10">
    <%= link_to 'Новый контракт', new_purchase_contract_path, class: 'btn btn-success' %>
  </div>
</div>

<div class="page-header">
  <h3>Контракты</h3>
</div>

<div class="row">
  <div class="col col-lg-10">
    <p class="text-info"><%= notice %></p>
  </div>
</div>
<table class="table table-condensed">
  <thead>
    <tr>
        <th>#</th>
        <th>Номер</th>
        <th>Дата регистрации</th>
        <th>Поставщик</th>
        <th>Сумма контракта</th>
        <th>Товарные позиции</th>
        <th></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: 'rows' %>
  </tbody>
</table>

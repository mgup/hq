<%= f.fields_for :olympic_document do |sub_f| %>
  <div class="form-group">
      <%= sub_f.label :series, class: 'col-sm-2 control-label' %>
      <div class="col-sm-3">
          <%= sub_f.text_field :series, class: 'form-control' %>
      </div>

      <%= sub_f.label :number, class: 'col-sm-3 control-label' %>
      <div class="col-sm-4">
          <%= sub_f.text_field :number, class: 'form-control', required: true %>
      </div>
  </div>

  <div class="form-group">
    <%= sub_f.label :diploma_type_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-2">
      <%= sub_f.text_field :diploma_type_id, class: 'form-control' %>
    </div>

    <%= sub_f.label :olympic_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-2">
      <%= sub_f.text_field :olympic_id, class: 'form-control', required: true %>
    </div>

    <%= sub_f.label :level_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-2">
      <%= sub_f.text_field :level_id, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group">
      <%= sub_f.label :date, class: 'col-sm-2 control-label' %>
      <div class="col-sm-4">
          <%= sub_f.text_field :date, class: 'form-control datepicker',
                               value: sub_f.object.date ? l(sub_f.object.date) : '', required: true%>
      </div>

      <%= sub_f.label :class_number, class: 'col-sm-2 control-label' %>
      <div class="col-sm-4">
          <%= sub_f.select :class_number,
                           options_from_collection_for_select(Olympic::ClassNumber.all,
                                                              :id, :name, sub_f.object.class_number),
                           {}, class: 'form-control' %>
      </div>

  </div>

  <div class="form-group">
      <%= sub_f.label :profile_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-6">
          <%= sub_f.select :profile_id,
                           options_from_collection_for_select(Olympic::Profile.all,
                                                              :id, :name, sub_f.object.profile_id),
                           {}, class: 'form-control' %>
      </div>

  </div>

  <div class="form-group">
      <div class="col-sm-offset-2 col-sm-3">
          <div class="checkbox">
              <label>
                  <%= sub_f.check_box :original %>
                  <strong>получен оригинал</strong>
              </label>
          </div>
      </div>
  </div>

  <hr>
<% end %>

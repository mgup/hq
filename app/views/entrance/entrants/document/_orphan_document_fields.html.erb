<%= f.fields_for :orphan_document do |sub_f| %>

  <div class="form-group">
      <%= sub_f.label :orphan_category_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
          <%= sub_f.select :orphan_category_id,
                           options_for_select(
                             [['Свидетельство о смерти обоих или единственного родителя', 1],
                              ['Справка учреждения ЗАГСа о внесении сведений об отце со слов матери', 2],
                              ['Обвинительный приговор суда с назначением наказания в виде лишения свободы обеих или единственного родителя', 3],
                              ['Письменный отказ одного или обоих родителей', 4],
                              ['Решение суда о лишении обоих или единственного родителя родительских прав', 5],
                              ['Решение суда о признании обоих или единственного родителя безвестно отсутствующими', 6],
                              ['Справка из органов социальной защиты населения', 7],
                              ['Иной документ', 8]
                             ], sub_f.object.orphan_category_id),
                           {}, class: 'form-control' %>
      </div>

  </div>

  <div class="form-group">
      <%= sub_f.label :series, class: 'col-sm-2 control-label' %>
      <div class="col-sm-3">
          <%= sub_f.text_field :series, class: 'form-control' %>
      </div>

      <%= sub_f.label :number, class: 'col-sm-3 control-label' %>
      <div class="col-sm-4">
          <%= sub_f.text_field :number, class: 'form-control', required: true %>
      </div>
  </div>

  <div class="form-group">
      <%= sub_f.label :organization, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
          <%= sub_f.text_field :organization, class: 'form-control' %>
      </div>
  </div>

  <div class="form-group">
      <%= sub_f.label :date, class: 'col-sm-2 control-label' %>
      <div class="col-sm-3">
          <%= sub_f.text_field :date, class: 'form-control datepicker',
                               value: sub_f.object.date ? l(sub_f.object.date) : '', required: true%>
      </div>

      <%= sub_f.label :type_name, class: 'col-sm-3 control-label' %>
      <div class="col-sm-4">
          <%= sub_f.text_field :type_name, class: 'form-control'%>
      </div>
  </div>

  <div class="form-group">
      <%= sub_f.label :additional_info, class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
          <%= sub_f.text_area :additional_info, class: 'form-control'%>
      </div>
  </div>

  <hr>
<% end %>

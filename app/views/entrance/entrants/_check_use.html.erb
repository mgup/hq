<% if can?(:manage, Entrance::UseCheck) %>
  <% if entrant.checks.last %>
    <%= link_to print_entrance_campaign_entrant_check_path(@campaign.id, entrant.id, entrant.checks.last.id),
                class: 'btn btn-default', title: 'Справка ЕГЭ' do %>
      <span class="glyphicons notes"></span>
    <% end %>
  <% else %>
    <%= button_tag class: 'btn btn-default', title: 'Справка ЕГЭ', disabled: true do %>
      <span class="glyphicons notes"></span>
    <% end %>
  <% end %>
<% end %>

                      $('.app.without_contract.agree').hide();
                      $('.app.without_contract.disagree').show();
                    } else{
                      $('.app.without_contract').show();
                    }
                  } else {
                    if (i == '1') {
                      $('.app.disagree').hide();
                      $('.app.agree').show();

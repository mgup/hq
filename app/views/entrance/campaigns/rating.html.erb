                  }
                }
            </script>
          <!--<div class="col-sm-12">-->
            <!--<label>-->
              <!--<input name="agree" type="radio" data-value="10" checked onclick="$('input[name=agree]').val($(this).data('value')); checkContract($(this).data('value'))"> Заявления независимо от наличия согласия-->
            <!--</label>-->
            <!--&nbsp;&nbsp;&nbsp;-->

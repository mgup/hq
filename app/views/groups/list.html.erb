<div class="page-header">
    <h1>Количество студентов в группах</h1>
</div>

<table class="table">
  <thead>
  <tr>
    <th>Курс</th>
    <th>Группа</th>
    <th>Численность</th>
  </tr>
  </thead>
  <tbody>
    <% @groups.each do |speciality, groups| %>
    <tr><th colspan="3"><%= speciality.full_name %></th></tr>
    <% groups.group_by(&:course).each do |course, gs| %>
      <tr>
        <td rowspan="<%= gs.length %>"><%= course %></td>
        <td><%= gs.first.name %></td>
        <td><%= gs.first.students.length %></td>
      </tr>
      <% gs.shift %>
      <% gs.each do |g| %>
        <tr>
          <td><%= g.name %></td>
          <td><%= g.students.length %></td>
        </tr>
      <% end %>
    <% end %>
  <% end %>
  </tbody>
</table>
